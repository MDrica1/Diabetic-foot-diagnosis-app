#Threshold 90 was good and left the foot well defined for almost all images.
#The exception was the "right foot 1" image, which was only good (no "missing" pixels inside the foot) at threshold 65.

fotos=['pe_esquerdo1.jpg','pe_esquerdo2.jpg','pe_direito1.jpg','pe_direito2.jpg'] #Read test images.
for i in fotos:
    img = cv2.imread(i, cv2.IMREAD_GRAYSCALE)

    _, threshold1 = cv2.threshold(img,65,255,cv2.THRESH_TOZERO)
    _, threshold2 = cv2.threshold(img,90,255,cv2.THRESH_TOZERO)
      
    cv2_imshow(threshold1)
    cv2_imshow(threshold2)
    cv2.waitKey(0)
    cv2.destroyAllWindows()

#Using the average value (90 and 65) as a threshold

fotos=['pe_esquerdo1.jpg','pe_esquerdo2.jpg','pe_direito1.jpg','pe_direito2.jpg']
for i in fotos:
    img = cv2.imread(i, cv2.IMREAD_GRAYSCALE)

    _, threshold1 = cv2.threshold(img,77,255,cv2.THRESH_TOZERO)
 
    cv2_imshow(threshold1)
    cv2.waitKey(0)
    cv2.destroyAllWindows()
